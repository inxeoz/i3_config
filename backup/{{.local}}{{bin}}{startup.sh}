#!/usr/bin/env bash
# start-svcs.sh
# Start selected services manually when you actually need them

set -euo pipefail

services=(
  ModemManager.service   # mobile broadband
  cups.service           # printing
  bluetooth.service      # BT devices
  avahi-daemon.service   # mDNS/zeroconf
  libvirtd.service       # virtualization host
  mariadb.service        # database
)

echo "[*] Starting selected services..."
for svc in "${services[@]}"; do
  echo "  â†’ $svc"
  sudo systemctl start "$svc"
done

echo "[*] All requested services started."
